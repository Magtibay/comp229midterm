<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8">
        <h1><%= title %></h1>

    <form class="form" method="POST">

        <div class="form-group">
         <label for="nameTextField">Book Title</label>
            <input type="text" class="form-control"
            id="nameTextField"
            placeholder="Enter the Book Title"
            name="name" 
            value="<%= book.name %>"
            required>
        </div>

        <div class="form-group">
         <label for="authorTextField">Author</label>
            <input type="text" class="form-control"
            id="authorTextField"
            placeholder="Enter the Books Author"
            name="author" 
            value="<%= book.author %>"
            required>

              <div class="form-group">
         <label for="publishedTextField">Published</label>
            <input type="text" class="form-control"
            id="publishedTextField"
            placeholder="Enter the Published year"
            name="published"
             value="<%= book.published %>"
            required>

              <div class="form-group">
         <label for="descriptionTextField">Discription</label>
            <textarea type="text" class="form-control"
            id="descriptionTextField"
            placeholder="Enter the Books description"
            name="description"
            required>
            <%= book.description %>
        </textarea>

              <div class="form-group">
         <label for="priceTextField">Price</label>
            <input type="number" class="form-control"
            id="priceTextField"
            placeholder="Enter the price of the book"
            name="price"
            value="<%= book.price %>"
            required>
        </div>

     <button class="btn btn-primary">
        <i class="fas fa-edit"></i> Submit</button>

     <a href="/book-list" class="btn btn-warning">
     <i class="fas fa-undo"> </i>Cancel</a>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>